@model Entra21.CSharp.ClinicaVeterinaria.Servico.ViewModels.RacaCadastrarViewModel

@{
    var especies = ViewBag.Especies as List<string>;
    especies.Add(string.Empty);

    var selectDasEspecies = new SelectList(especies, string.Empty);
}

<h3>Cadastro da Raça</h3>

<form asp-action="cadastrar" method="POST">

    <div class="mb-3">
        <label asp-for="Nome" class="form-labol" />
        <input asp-for="Nome" class="form-label" required="required" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Especie" class="form-label"></label>
        <select asp-for="Especie" asp-items="selectDasEspecies" class="form-select"> </select>
        <span asp-validation-for="Especie" class="text-danger"></span>
    </div>

    <div class="text-end">
        <a href="/raca" class="btn btn-outline-danger">Canselar</a>
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</form>